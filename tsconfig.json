{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6", 
    "types": ["node"],

  
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "allowEmptyCodegenFiles": true
 }
 ,
  "include": [
    "src/**/*",
    "node_modules/angular2-material-datepicker/*.ts",
    "node_modules/angular2-material-datepicker/src/*.ts"
  ]
}
